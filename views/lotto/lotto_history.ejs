            }
        }

        // í† ê¸€ ê¸°ëŠ¥
        function toggleDetails(id) {
            const detailsSection = document.getElementById(`details-${id}`);
            const toggleBtn = document.querySelector(`[data-id="${id}"] .toggle-btn`);
            
            if (detailsSection.classList.contains('expanded')) {
