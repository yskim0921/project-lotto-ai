        // íˆìŠ¤í† ë¦¬ ë°ì´í„° ë¡œë“œ
        async function loadHistory() {
            try {
                const response = await fetch('/lotto/history');
                const result = await response.json();
                
                if (result.success) {
                    displayHistory(result.data);
                } else {
                    throw new Error(result.error || 'ë°ì´í„° ë¡œë“œ ì‹¤íŒ¨');
