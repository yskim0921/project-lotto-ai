        // ì‚­ì œ ê¸°ëŠ¥
        async function deleteHistory(id) {
            if (!confirm('ì •ë§ë¡œ ì´ ë¶„ì„ ê²°ê³¼ë¥¼ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                return;
            }
            
            try {
                const response = await fetch(`/lotto/history/${id}`, {
                    method: 'DELETE'
                });
                
                if (response.ok) {
                    // ì‚­ì œëœ ì¹´ë“œ ì œê±°
                    const card = document.querySelector(`[data-id="${id}"]`);
                    if (card) {
