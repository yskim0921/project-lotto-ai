                                    ${Object.keys(result.number_info.today_number_meanings).slice(0, 2).map(emotion => {
                                        const meanings = result.number_info.today_number_meanings[emotion];
                                        if (Array.isArray(meanings) && meanings.length > 0) {
                                            return `
