            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }

        select:hover {
            border-color: #667eea;
            background-color: rgba(102, 126, 234, 0.05);
        }

